<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<diskStore path="java.io.tmpdir" />
	<!-- 默认的缓存策略 -->
	<defaultCache  maxElementsInMemory="10000" eternal="false"
		overflowToDisk="true" timeToIdleSeconds="120" timeToLiveSeconds="120"
		diskPersistent="false" />
	<cache name="mycategory" maxElementsInMemory="10000" eternal="false"
		overflowToDisk="true" timeToIdleSeconds="120" timeToLiveSeconds="3"
		diskPersistent="false" />
	<cache name="mymaxcache" maxElementsInMemory="10000" eternal="false"
		overflowToDisk="true" timeToIdleSeconds="120" timeToLiveSeconds="5"
		diskPersistent="false" />
</ehcache>